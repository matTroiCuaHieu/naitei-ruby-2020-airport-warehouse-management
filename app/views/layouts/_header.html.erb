<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".warehouse"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">

        <li><%= link_to t(".home"), root_path, id: "navbar-content" %></li>

        <% if logged_in? %>
          <li><%= link_to t(".users"), users_path, id: "navbar-content"%></li>
          <li><%= link_to t(".locations"), locations_path, id: "navbar-content" %></li>
          <li><%= link_to t(".planes"), planes_path, id: "navbar-content" %></li>
          <li><%= link_to t(".requests"), requests_path, id: "navbar-content" %></li>
          <li class="dropdown">
            <%= link_to t(".account_html"), "#", class: "dropdown-toggle", "data-toggle": "dropdown", id: "navbar-content" %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user, class: "dropdown-item" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete, class: "dropdown-item"%>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("users.sign_in"), login_path, id: "navbar-content" %></li>
        <% end %>
        <li class="en" ><%= link_to t(".en"), locale: :en %></li>
        <li class="vi" ><%= link_to t(".vi"), locale: :vi %></li>
      </ul>
    </nav>
  </div>
</header>
