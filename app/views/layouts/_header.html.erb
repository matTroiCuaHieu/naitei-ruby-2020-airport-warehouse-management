<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".warehouse"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".users"), users_path %></li>
        <li><%= link_to t(".locations"), locations_path %></li>
        <li><%= link_to t(".planes"), planes_path %></li>
        <% if logged_in? %>
        <li class="nav-item dropdown no-arrow mx-1">
              <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-bell fa-fw"></i>
                <span class="badge badge-danger badge-counter">5+</span>
              </a>
              <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="alertsDropdown">
                <h6 class="dropdown-header">
                  <%= t ".notifications" %>
                </h6>
                <hr>
                <div class="dropdown-menu-item">
                  <div class="small text-gray-500">December 12, 2019</div>
                  <span class="font-weight-bold">Plane ABC245 want to change to radar warehouse. Request from Leonel Messi</span>
                </div>
                <hr>
                <div class="dropdown-menu-item">
                  <hr>
                  <div class="small text-gray-500">December 12, 2019</div>
                  <span class="font-weight-bold"><b>Plane ABC201</b> want to be change from <b>Radar warehouse</b> to <b>Ready warehouse</b>. Request from <b>Cristiano Ronaldo</b></span>
                </div>
                <hr>
                <div class="dropdown-menu-item">
                  <div class="small text-gray-500">December 12, 2019</div>
                  <span class="font-weight-bold">A new monthly report is ready to download!</span>
                </div>
                <hr>
                <div class="dropdown-menu-seeall">
                  <a href="#">See all notifications</a>
                </div>
              </div>
            </li>
        <li class="dropdown">
          <%= link_to t(".account_html"), "#", class: "dropdown-toggle", "data-toggle": "dropdown" %>
          <ul class="dropdown-menu">
            <li><%= link_to t(".profile"), current_user, class: "dropdown-item" %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t(".logout"), logout_path, method: :delete, class: "dropdown-item"%>
            </li>
          </ul>
        </li>
        <% else %>
        <li><%= link_to t("users.sign_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
